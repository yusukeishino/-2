<div class="container">
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @user %>

		<h2>New book</h2>
		<%= render 'books/form', book: @book %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to user_path(@user) do %>
							<%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @user.name %>
						<% end %>
					</td>
					<td><%= link_to @newbook.title, book_path(@newbook) %></td>
					<td><%= @newbook.body %></td>
					<td>
						<% if @user == current_user %>
						<%= link_to "Edit", edit_book_path(@newbook), class: "btn-sm btn-success edit_book_#{@newbook.id}" %>
						<% end %>
					</td>
					<td>
						<% if @user == current_user %>
						<%= link_to "Destroy", book_path(@newbook), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %>
						<% end %>
					</td>
				</tr>
			</table>

	</div>
</div>

</div>